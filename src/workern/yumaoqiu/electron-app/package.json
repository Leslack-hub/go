{
  "name": "yumaoqiu-booking-app",
  "version": "1.0.0",
  "description": "羽毛球场地预订桌面应用",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vue-tsc && vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "pack": "npm run build && electron-builder",
    "pack:win": "npm run build && electron-builder --win",
    "pack:mac": "npm run build && electron-builder --mac",
    "start": "electron .",
    "pack:mac:x64": "npm run build && electron-builder --mac --x64",
    "pack:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "pack:mac:universal": "npm run build && electron-builder --mac --universal"
  },
  "keywords": [
    "electron",
    "vue",
    "typescript",
    "羽毛球",
    "预订"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.8.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vue-tsc": "^3.0.6",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "element-plus": "^2.4.4",
    "vue": "^3.3.8"
  },
  "build": {
    "appId": "com.yumaoqiu.booking",
    "productName": "羽毛球场地预订",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [{
      "from": "resources",
      "to": "resources",
      "filter": ["**/*"]
    }],
    "mac": {
      "category": "public.app-category.sports",
      "target": [{
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      }]
    },
    "win": {
      "target": [{
        "target": "portable",
        "arch": [
          "x64"
        ]
      }],
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}